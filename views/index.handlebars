<div class="container">

  <div class="row">
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Order Da Burger</h5>

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Devoured Burgers</h5>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <div>{{id}}. {{burger_name}}</div>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>



</div>