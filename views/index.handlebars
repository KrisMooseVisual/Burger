<div class="container">

  <div class="row">
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Order Da Burger</h5>

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=1}}
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Devoured Burgers</h5>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=0}}>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>


  </div>

</div>
