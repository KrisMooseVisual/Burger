<div class="container">

  <div class="jumbotron">
    <h1>PICK DA BURGER</h1>
    <p>DA ORDER, DA PICK UP</p>
    <br>
    <h2>SELECT DA BURGER</h2>
    <panel>
      <form class="create-form">
        <label for="newBurger">MAKE DA BURGER</label>
        <input type="text" id="newBurger" name="burger">
        <button type="submit" class="btn btn-success" id="addBurger">
          <span class="fa fa-thumbs-up"></span>
        </button>
      </form>
    </panel>
  </div>


  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftSide"><strong>ORDER DA BURGER</strong></div>
        <div class="panel-body">

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} . {{this.burger_name}}</strong></span>
            <button type="button" class="devourBurger btn btn-warning" id="devourBtn" data-id="{{this.id}}"
              data-newDevoured={{devour}}><span class="fa fa-usd"></span></button>

            <hr>
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>


    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="rightSide"><strong>DEVOUR DA BURGER</strong></div>
        <div class="panel-body">

          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} . {{this.burger_name}}</strong></span>
            <button type="button" class="dumpBurger btn btn-danger" id="dumpBtn" data-id="{{this.id}}" data-newDevoured={{devour}}><span class="fa fa-trash"></span></button>

            <hr>
            {{/if}}
            {{/each}}
          </ul>
          

        </div>
      </div>
    </div>
  </div>

</div>



</div>

